<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane id="AnchorPane" fx:id="anchorpane" prefHeight="700.0" prefWidth="1200.0" styleClass="account-bg" stylesheets="@style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="finaaal.CreateAccountViewController">
   <children>
      <AnchorPane layoutX="404.0" layoutY="34.0" prefHeight="646.0" prefWidth="751.0" style="-fx-background-color: #fff; -fx-background-radius: 20;">
         <effect>
            <DropShadow color="#21022f" />
         </effect>
         <children>
            <JFXTextField fx:id="name" labelFloat="true" layoutX="176.0" layoutY="45.0" prefHeight="31.0" prefWidth="400.0" promptText="Full Name">
               <font>
                  <Font name="Bookman Old Style Bold Italic" size="17.0" />
               </font>
            </JFXTextField>
            <JFXTextField fx:id="mail" labelFloat="true" layoutX="176.0" layoutY="147.0" prefHeight="31.0" prefWidth="400.0" promptText="Email">
               <font>
                  <Font name="Bookman Old Style Bold Italic" size="17.0" />
               </font>
            </JFXTextField>
            <JFXTextField fx:id="uname" labelFloat="true" layoutX="176.0" layoutY="263.0" prefHeight="31.0" prefWidth="193.0" promptText="User Name">
               <font>
                  <Font name="Bookman Old Style Bold Italic" size="17.0" />
               </font>
            </JFXTextField>
            <JFXPasswordField fx:id="pass" labelFloat="true" layoutX="176.0" layoutY="379.0" prefHeight="31.0" prefWidth="242.0" promptText="Password">
               <font>
                  <Font name="Bookman Old Style Bold Italic" size="17.0" />
               </font>
            </JFXPasswordField>
            <JFXPasswordField fx:id="cpass" labelFloat="true" layoutX="176.0" layoutY="490.0" prefHeight="31.0" prefWidth="242.0" promptText="Confirm Password">
               <font>
                  <Font name="Bookman Old Style Bold Italic" size="17.0" />
               </font>
            </JFXPasswordField>
            <JFXTextField fx:id="area" labelFloat="true" layoutX="458.0" layoutY="263.0" prefHeight="31.0" prefWidth="213.0" promptText="Area">
               <font>
                  <Font name="Bookman Old Style Bold Italic" size="17.0" />
               </font>
            </JFXTextField>
            <JFXButton fx:id="createAccount" layoutX="544.0" layoutY="422.0" onMouseClicked="#saveData" prefHeight="54.0" prefWidth="164.0" styleClass="btn-CreateAccount" text="Create Account">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <effect>
                  <DropShadow />
               </effect>
            </JFXButton>
            <Label fx:id="lblLogin" layoutX="237.0" layoutY="592.0" onMouseClicked="#openLoginScene" text="Already Have Account. Log Me In.." textFill="#2d0361">
               <font>
                  <Font name="Bookman Old Style Bold Italic" size="17.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <effect>
                  <DropShadow />
               </effect>
            </Label>
         </children>
      </AnchorPane>
      <ImageView fitHeight="533.0" fitWidth="388.0" layoutX="16.0" layoutY="163.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@logo.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
